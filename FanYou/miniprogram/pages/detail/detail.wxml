<!--pages/detail/detail.wxml-->
<view class="container">
  <view class="carousel">
    <swiper class="swiper-block" previous-margin="200rpx" next-margin="200rpx" 
            current="0" bindchange="swiperChange" circular="{{true}}">
      <block wx:for="{{imgUrls}}" wx:index="{{index}}">
        <swiper-item class="swiper-item">
          <image mode="scaleToFill" src="{{item}}" class="slide-image {{swiperIndex == index ? 'active' : ''}}"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="intro">
    <view class="intro-title">{{currentView.city}} {{currentView.site_name}}</view>
    <view class="intro-level_score" space="emsp">等级：{{currentView.level}}  评分：{{currentView.score}}</view>
    <text  class="intro-text" space="emsp">  {{currentView.introduction}}</text>
  </view>
  <view class="function">
    <view class="like">
      <image class='collect_image' src = '{{like_img_url}}' bindtap = 'click_like' style="width: 120rpx; height: 120rpx; display: relative; "></image>
    </view>
    <view class="collect">
      <image class='collect_image' src = '{{collect_img_url}}' bindtap = 'click_collect' style="width: 120rpx; height: 120rpx; display: relative; "></image>
    </view>
  </view>
</view>
