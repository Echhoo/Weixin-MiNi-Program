.sub_button{
  text-align: center;
  position: absolute;
  left:10%;
  border-radius: 50rpx;
  border-style: solid;
  border-width: 1px;
  border-color: rgb(105, 158, 128);
  background: linear-gradient(rgb(202, 225, 219), rgb(63,105,93)); 
  box-shadow: 3px 3px 1px 0px rgb(64, 134, 107);
}
.reset_button{
  text-align: center;
  position: absolute;
  right:10%;
  border-radius: 50rpx;
  border-style: solid;
  border-width: 1px;
  border-color: rgb(194, 152, 148);
  background: linear-gradient(rgb(251, 255, 241), rgb(195,122,115)); 
  box-shadow: 3px 3px 1px 0px rgb(184, 109, 103);
}
.sightName{
  font-size:15px;
}
