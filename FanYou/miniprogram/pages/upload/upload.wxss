/* pages/upload/upload.wxss */
.form_buttons{
  width: 100%;
  height: 20%;
  /* display: inline; */
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.container{
  display:flex;
  flex-direction: column;
  justify-content: space-center;
  align-items: center;
  width:100vw;
  height:100vh;
  position:relative;
}
.title{
  width: 100%;
  font-size:36rpx;
  padding:10rpx;
  text-align: center;
  line-height: 80rpx;
}
.test{
  top:200rpx;
}
.uploadContainer{
  text-align: left;
  font-family: "新宋体";
}
.dataInput{
  margin-top:15rpx;
  border-radius: 3rpx;
  box-shadow:5px 5px 15px 2px rgb(230, 226, 226);
  width: 270px;
  height: 70rpx;
  min-height: 70rpx;
}

.sub_button{
  text-align: center;
  font-size:10px;
  position: absolute;
  left:5%;
  border-radius: 10rpx;
  box-shadow:5px 5px 15px 2px rgb(230, 226, 226);
}
.reset_button{
  text-align: center;
  position: absolute;
  right:5%;
  border-radius: 10rpx;
  box-shadow:3px 3px 8px 2px rgb(230, 226, 226);
}
.sightName{
  font-size:15px;
}
.btn{
  background-color: transparent;
}