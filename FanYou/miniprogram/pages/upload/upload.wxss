.container{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width:100vw;
  height:100vh;

}

.formContainer{
  height:80%; 
}
.title{
  width: 100%;
  font-size:36rpx;
  padding:10rpx;
