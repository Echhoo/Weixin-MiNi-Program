  line-height: 50rpx;
}

.uploadContainer{
  text-align: left;
}
.dataInput{
  margin-top:15rpx;
  border-radius: 3rpx;
  box-shadow:2px 2px 2px 2px rgb(230, 226, 226);
  width: 100%;
  text-align: center;
}
