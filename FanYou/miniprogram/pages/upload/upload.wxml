<!--pages/upload/upload.wxml-->
<view class="container">
      <view class="title" style="white-space:pre-wrap">传一传\n制作你的专属卡片</view>
  <!-- <scroll-view class="test" bindscrolltolower="scrollbot" scroll-y="{{true}}"
    style="height: {{clientHeight?clientHeight+'px':'auto'}}"> -->
    <form  style="font-size: 40rpx" bindsubmit='submitViewData' bindreset="reset">
      <mp-cells class="uploadContainer">
        <mp-cell class="data">
          <mp-uploader bindfail="uploadError" bindsuccess="uploadSuccess" select="{{selectFile}}"
            upload="{{uplaodFile}}" files="{{files}}" max-count="2" title="图片上传（2张）">
          </mp-uploader>
        </mp-cell>
        <mp-cell class="data">
          <view class="recommand">推荐节日</view>
          <picker bindchange="bindPickerChange" value="{{fes_index}}" range="{{fes_array}}">
            <view class="picker">{{fes_array[fes_index]}}</view>
          </picker>
        </mp-cell>
        <mp-cell class="data">
          <view class="sightName">景点名称</view>
          <view class="dataInput"><input type='text' name='site_name'></input></view>
        </mp-cell>

        <mp-cell class="data">
          <view class="sightName">所在城市</view>
          <view class="dataInput"><input type='text' name='city'></input></view>
        </mp-cell>

        <mp-cell class="data">
          <view class="sightName">景点介绍(40字以内)</view>
          <view class="dataInput">
            <textarea auto-focus="true" name="intro"></textarea>
          </view>
        </mp-cell>

        <!-- <view ></view> -->
      </mp-cells>
    </form>
    <!-- </view> -->
    <view class="form_buttons">
    <block wx:if="{{!submited}}">
      <view class="sub_button">
        <button class="btn" formType="submit" style="width:300rpx">点击提交</button>
      </view>
    </block>
    <view class="reset_button">
      <button class="btn" formType="reset" style="width:300rpx">重置数据</button>
    </view>
  </view>
  <!-- </scroll-view> -->

</view>