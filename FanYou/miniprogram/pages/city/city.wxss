  /* 选择器 */
.picker-content{
  padding: 30rpx;
  text-align: center;
  display: flex;
  flex-direction:row;
  align-content: center;
}
.picker-row{
  width: 200rpx;
  width: 50rpx;
}

.picker-name{
  height: 80rpx;
  width: 200rpx;
  line-height: 80rpx;
  font-size: 25rpx;
}
.picker-img{
  height: 100rpx;
  width: 100rpx;
  margin-left: 20%;
}
.picker-detail{
  height: 80rpx;
  width: 400rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 25rpx;
  padding: 0 10px;
  overflow: hidden;
}
.scroll-box{
  white-space: nowrap;
  height: 105vh;
}

/* 轮播 */
.place{
  width:100%;
  height:850rpx;
  position:absolute;  
}

.swiper-block{
  height: 760rpx;
  width: 100%;
}
.swiper-item{
display: flex;
flex-direction: column;
justify-content: space-around;
align-items: center;
overflow:unset;
}
.slide-image{
  height:550rpx;
  width:550rpx;
  border-radius: 9rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2);
  margin: 0rpx 30rpx;
  z-index: 1;
  border-radius: 5%;
  }
  .active{
  transform: scale(1.06);
  transition:all .2s ease-in 0s;
  z-index: 20;
  }

.view-list-wrapper {
  width: 750rpx;
  height: 700rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}

.view-info {
  text-align: center;
  top: 30rpx;
  margin: 25rpx;
  line-height: 1;
  color: #342158;
  display: inline-block;
}

.view-title {
  font-size: 50rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.view-title.text-small {
  font-size: 38rpx;
}

.view-type {
  font-size: 25rpx;
  color: rgba(52, 33, 88, 0.7);
}

.view-detail {
  box-sizing: border-box;
  color: #342158;
  display: block;
  width: 350rpx;
  height: 80rpx;
  margin: 10% 30%;
  font-size: 40rpx;
  line-height: 76rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #342158;
}

.view-description-wrapper {
  display: flex;
  flex-direction: column;
  align-content: center;
  margin: auto;
  width: 550rpx;
  height: 450rpx;
}

.item-title {
  font-size: 35rpx;
  font-weight: bold;
  color: #342158;
}

.view-description {
  
  margin-top: 10rpx;
  height: 320rpx;
  font-size: 30rpx;
  line-height: 2;
  color: #342158;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 4; /* 设置超出多少行隐藏 */
  -webkit-box-orient: vertical;
  overflow: hidden;
} 
