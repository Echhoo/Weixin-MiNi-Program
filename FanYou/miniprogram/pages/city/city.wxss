  /* 选择器 */
.picker-content{
  padding: 30rpx;
  text-align: center;
  display: flex;
}
.picker-name{
  height: 80rpx;
  width: 200rpx;
  line-height: 80rpx;
  font-size: 25rpx;
}
.picker-detail{
  height: 80rpx;
  width: 400rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 25rpx;
  padding: 0 10px;
  overflow: hidden;
}
.scroll-box{
  white-space: nowrap;
  height: 105vh;
}

/* 轮播 */
.place{
  width:100%;
  height:850rpx;
  position:absolute;  
}

.swiper-block{
  height: 760rpx;
  width: 100%;
}
.swiper-item{
display: flex;
flex-direction: column;
justify-content: center;
align-items: flex-start;
overflow:unset;
}
.slide-image{
  height:480rpx;
  width:480rpx;
  border-radius: 9rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2);
  margin: 0rpx 30rpx;
  z-index: 1;
  border-radius: 10%;
  }
  .active{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
  z-index: 20;
  }



