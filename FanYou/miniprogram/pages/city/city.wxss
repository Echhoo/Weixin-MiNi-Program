.view-info {
  text-align: center;
  top: 30rpx;
  margin: 25rpx;
  line-height: 1;
  color: #342158;
  display: inline-block;
}

.view-title {
  font-size: 50rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.view-title.text-small {
  font-size: 38rpx;
}

.view-type {
  font-size: 25rpx;
  color: rgba(52, 33, 88, 0.7);
}

.view-detail {
  box-sizing: border-box;
  color: #3285bd;
  display: block;
  width: 350rpx;
  height: 80rpx;
  font-size: 35rpx;
  line-height: 76rpx;
  text-align: center;
  border-radius: 40rpx;
  border: 2rpx solid #3285bd;
}

.view-description-wrapper {
  margin: auto;
  width: 550rpx;
  height: 450rpx;
}

.item-title {
  font-size: 35rpx;
  font-weight: bold;
  color: #342158;
}

.view-description {
  margin-top: 10rpx;
  height: 320rpx;
  font-size: 25rpx;
  line-height: 2;
  color: #342158;
  -webkit-line-clamp: 3; /* 设置超出多少行隐藏 */
  -webkit-box-orient: vertical;
  overflow: hidden;
  /* 设置 display 为 -webkit-box 或者 -webkit-inline-box 时为隐藏状态 */
  display: -webkit-inline-box;
} 
