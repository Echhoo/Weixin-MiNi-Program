/* 卡片 */

/* 滑动区域 */
.swiper-item {
  width: 100%;
  height: 100%;
  text-align: center;
  position: relative;
}

.boxItem {
  display: flex;
  text-align: center;
  vertical-align: center;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80%;
  padding-top:20rpx;
  padding-bottom: 0rpx;
  overflow-wrap: break-word;
  word-wrap: break-word;
  overflow: hidden;
}

/* .boxItem.p40{ padding: 40rpx;} */
.text {
  padding: 40rpx 100rpx;
  overflow-wrap: break-word;
  word-wrap: break-word;
  overflow: hidden;
}

/* 海报展示图 */
.posterGroup {
  width: 600rpx;
  height:100%;
  text-align: left;
  padding: 20rpx;
  border-radius: 8rpx;
  background: #fff;
  overflow: hidden;
}

.posterGroup .img {
  width: 560rpx;
  height: 100%;
  /*height: 857rpx;*/
  border: 0;
  border-radius: 8rpx;
}

.posterGroup .imgWrap {
  position: relative;
  height: 100%;
}

.posterGroup .detailBox {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 100rpx;
  text-align: center;
  width: 100%;
  overflow: hidden;
}

.posterGroup .mTitle {
  color: #454545;
}

.posterGroup .mSmall {

  color: white;
}

/* backGroup */
.backGroup {
  text-align: left;
  font-size: 28rpx;
  padding-bottom: 100rpx;
}

.backGroup .img {
  border-radius: 8rpx;
  /* margin-bottom: 20rpx; */
  padding-bottom: 20rpx;
}

.backGroup .textWrap {
  padding-left:20rpx;
  padding-right: 20rpx;
}

.flagTips {
  position: relative;
  height: 40rpx;
}

.flagTips .left {
  width: 40rpx;
  border: 0;
}

.flagTips .right {
  width: 40rpx;
  border: 0;
}

.otherInfo {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 30rpx;
  width: 100%;
  overflow: hidden;
  text-align: left;
}

.copyright {
  border-top: 1rpx dotted #eee;
  margin-top: 20rpx;
  text-align: center;
}

.flipGroup {
  width: 600rpx;
  height:90%;
  perspective: 3000rpx;
}

.flipBox {
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  transition: all 0.6s linear;
  transform-style: preserve-3d;
}

.sideWrap {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 10rpx;
  overflow: hidden;
}

.sideWrap.front {
  background: #fff;
}

.sideWrap.back {
  backface-visibility: hidden;
  transform: rotateY(180deg);
  padding: 20rpx;
  background: #fff;
}

.flipGroup.on .flipBox {
  transform: rotateY(180deg);
}

.movieGrid {
  padding: 40rpx;
}

.img {
  width: 100%;
  border: 0;
}

.iconFlag {
  width: 30rpx;
  height: 30rpx;
  border: 0;
}


