<view class="container"> 
  <image src="{{bgUrl}}" class="bgImage" style="{{show?'filter: blur(6rpx)':''}}" mode="aspectFill"></image>
  <view class="btn1-container" bindtap="introView" ></view>
  <view class="btn2-container" bindtap="personView"></view>
  <view class="btn3-container" bindtap="customView"></view>

  <view class="{{show?'tipsContainer':'none'}}"  >
    <view class="tips" bindtap="shows" wx:if="{{show}}">
