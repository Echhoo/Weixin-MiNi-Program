/* pages/book/catagory.wxss */
page{
  width: 100%;
  height: 100%;
}

.index{
  opacity: 0; 
  transform: translateY(-200px);
}
.container{
  height: 100vh;
  width: 100vw;
  margin: 0;
  position: relative;
} 

.bgImage{
  width: 100%;
  height:100%;
  position:absolute;
  background-size: 100% 100%;
  z-index:-1;
  
}
.btn1-container{
  width:450rpx;
  height:300rpx;
  left:50rpx;
  top:21.5%;
  position:fixed;
}
.btn2-container{
  width:300rpx;
  height:200rpx;
  left:50rpx;
  top:45%;
  position:fixed;

}
.btn3-container{
  width:320rpx;
  height:300rpx;
  right:50rpx;
  top:60%;
  position: fixed;

}

.btn{
  width: 100%;
  height:100%;
}

.none {
  display: none;
}

.tipsContainer{
  width:100%;
  height:100%;
  position: absolute;
}
.tips{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  height:65%;
  margin-top:230rpx;
  padding-bottom:30rpx;
  margin-left:100rpx;
  padding-left:20rpx;
  margin-right:100rpx;
  padding-right:20rpx;
  border-radius: 50rpx;
  color:white;
  background-color: rgb(235, 229, 229,0.4);
  position: relative;
}
.guide{
  font-weight:bolder;
  font-size: 20px;
  font-family: "新宋体";
  text-align: center;
  width: 200rpx;
  position: absolute;
  animation-iteration-count:1;
	animation-fill-mode:forwards;  
}
.school{
  top:110%;
  position: absolute;
  font-size:18px;
}
.tip{
  text-align: center;
  opacity: 0;  
  height:100rpx;
  padding: 5rpx;
  font-size: 16px;  
  white-space:pre-wrap;
  position: absolute;
}
.tip1{
  transform: translateY(-100px); 
}
.tip2{
  transform: translateY(50px); 
}
.tip3{
  transform: translateY(150px); 
}
.tip4{
  transform: translateY(220px); 
}
.ani0{
  animation:mymove0 0.8s;
}
@keyframes mymove0
{
from {top:8%;}
to {top:7%;}
}

.ani1{
  animation:mymove1 2s;
}
@keyframes mymove1
{
from {top:35%;}
to {top:25%;}
}

.ani2{
  
  animation:mymove2 2s;

}
@keyframes mymove2
{
from {top:55%;}
to {top:45%;}
}

.ani3{

  animation:mymove3 2s;

}
@keyframes mymove3
{
from {top:75%;}
to {top:65%;}
}

.ani4{
  animation:mymove4 2s;
}
@keyframes mymove4
{
from {top:90%;}
to {top:85%;}
}




