<view class="page">
<view class="swiper-tab">
 <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">City</view>
 <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">Festival</view> 
 </view>
 <swiper class="swiper" current="{{currentTab}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}" duration="200" bindchange="swiperChange">
 
 <swiper-item>
  <scroll-view  class='container' scroll-y="{{true}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}" bindscrolltolower="scrollbot">
  <scroll-view class='mrys'  wx:for="{{storyList}}" wx:key="id" >
    <view class='box ' >
      <view class='title'>{{item.city}}</view>
      <image class='image' src='{{item.img_url}}' mode='aspectFill' catchtap='onTapNavigateTo' data-id='{{item._id}}'></image>
      <view class='content'>{{item.introduction}}</view>
    </view>   
  </scroll-view>
</scroll-view>
 </swiper-item>
 <swiper-item> 
  <scroll-view class='container' scroll-y="{{true}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}" bindscrolltolower="scrollbot">
  <scroll-view class='mrys'  wx:for="{{festivalViewList}}" wx:key="id" >
    <view class='box ' >
      <view class='title'>{{item.city}}</view>
      <image class='image' src='{{item.img_url}}' mode='aspectFill' catchtap='onTapNavigateTo' data-id='{{item._id}}'></image>
      <view class='content'>{{item.introduction}}</view>
    </view>   
  </scroll-view>
</scroll-view>
 </swiper-item> 
 </swiper>
</view>