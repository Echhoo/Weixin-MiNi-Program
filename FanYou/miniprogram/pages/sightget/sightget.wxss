/* pages/sightget/sightget.wxss */
.container{
  width: 100vw;
  height:100vh;
  position: relative;
}
.imgContainer{
  width:100%;
  height:100%;
  position: absolute;
  z-index: -99;
}
.img{
  width:100%;
  height:100%;
}

.result{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:100%;
  height:60%;
  bottom:0;
  position: absolute;
  background-color: rgb(235, 229, 229, 0.8);
  animation:mymove 2s;
	animation-iteration-count:1;
	animation-fill-mode:forwards;
}

@keyframes mymove
{
	from {bottom:-60%;}
	to {bottom:0;}
}
.conten{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.above{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:80%;
  height:30%;
  border-bottom:solid;
  border-bottom-color: black;
}

.plantImg{
  width:200rpx;
  height:200rpx;
  border-radius: 100rpx;
  background-color: rgb(235, 229, 229, 1);
}
.plant{
  width:100%;
  height:100%;
  overflow: hidden;
  border-radius: 100rpx;
}
.plantName{
  font-size:27px;
  font-family: '楷体';
  font-weight: 600;
}

.score{
  width:50%;
  text-align: center;
  font-size:20px;
  font-family: '楷体';
  border-left-style: solid;
  border-right-style: solid;

}
.below{
  width:90%;
  height:60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.baike{
  width:85%;
  height:50%;
}
.baikeText{
  padding-top:60rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  align-content: center;
  font-size: 14px;

}
.more{
  width: 90%;
  height:20%;
  font-size:14px;
  font-family: "楷体";
  font-weight: 600;
}
.url{
  font-size:12px;
  overflow: hidden;
} 