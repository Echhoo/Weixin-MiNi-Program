/* pages/sightget/sightget.wxss */
.container{
  width: 100vw;
  height:100vh;
  position: relative;
}
.img{
  width:100%;
  height:100%;
}

.carousel{
  width:100%;
  height:40%;
  bottom:0;
  position:absolute;  
}
.swiper-block{
  height: 100%;
  width: 100%;
}
.swiper-item{
display: flex;
flex-direction: column;
justify-content: center;
align-items: flex-start;
overflow:unset;
}
.slide-image{
height:320rpx;
width: 320rpx;
border-radius: 9rpx;
box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2);
margin: 0rpx 30rpx;
z-index: 1;
}
.active{
transform: scale(1.2);
transition:all .2s ease-in 0s;
z-index: 20;
}
